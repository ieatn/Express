<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    
    <%- include('./partials/nav.ejs') %>
    
    <h1>welcome to the home page <%= name %>!</h1>

    <div class="blogs-content">
        <h2>All blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <h3><%= blog.title %></h3>
                <p><%= blog.text %></p>
           <% }) %>
        <% } else { %>
            <p>There are no blogs to display...</p>
        <% } %>
    </div>
</body>
</html>